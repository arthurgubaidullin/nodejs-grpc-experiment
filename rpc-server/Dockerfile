# This file is generated by Nx.
#
# Build the docker image with `npx nx docker-build rpc-server`.
# Tip: Modify "docker-build" options in project.json to change docker build args.
#
# Run the container with `docker run -p 3000:3000 -t rpc-server`.
FROM docker.io/node:lts-alpine

ENV HOST=0.0.0.0
ENV PORT=3000

WORKDIR /app

RUN addgroup --system rpc-server && \
          adduser --system -G rpc-server rpc-server

COPY dist/rpc-server rpc-server
RUN chown -R rpc-server:rpc-server .

# You can remove this install step if you build with `--bundle` option.
# The bundled output will include external dependencies.
RUN npm --prefix rpc-server --omit=dev -f install

CMD [ "node", "rpc-server" ]
